{
  "dependencies": {
    "bulma": "^0.9.2",
    "requirejs": "^2.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "live-server": "^1.2.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "serve:dev": "live-server --mount=/node_modules:node_modules src",
    "format": "prettier --write \"**/*.{md,html,css,js}\"",
    "clean": "rimraf dist/*",
    "uglify": "uglifyjs src/js/horloge.js src/js/modal.js src/js/index.js -o dist/bundle.min.js",
    "build": "npm run clean && npm run uglify"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,html,css,js}": "prettier --write"
  }
}
